<h1>Listing products</h1>

<table class="table table-striped table-condensed table-nowrap">
  <thead>
    <tr>
      <th class="expand">Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <% if signed_in? %>
      <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>

<% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product %></td>
      <td><%= product.price %> SEK</td>
      <td><%= product.quantity %></td>
      <% if signed_in? %>
      <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-mini btn-warning' %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %></td>
      <% end %>
    </tr>
<% end %>
  </tbody>
</table>

<br />
<% if signed_in? %>
<%= link_to 'New Product', new_product_path, class: 'btn btn-success' %>
<% end %>